MCS=mcs
DESTDIR=

all: linux

linux: Debugger.exe

ALL_SOURCES = \
	@top_srcdir@/frontends/gui/*.cs		\
	@top_srcdir@/frontends/command-line/*.cs	\
	@top_srcdir@/backends/gdb/*.cs			\
	@top_srcdir@/interfaces/*.cs			\
	@top_srcdir@/classes/*.cs

DEPS = \
	-r glib-sharp.dll	\
	-r pango-sharp.dll	\
	-r atk-sharp.dll	\
	-r gdk-sharp.dll	\
	-r gtk-sharp.dll	\
	-r gnome-sharp.dll	\
	-r glade-sharp.dll	\
	-r System.Drawing	\
	-r Mono.CSharp.Debugger

Debugger.exe: $(ALL_SOURCES)
	$(MCS) -o Debugger.exe $(DEPS) $(ALL_SOURCES)

clean:
	rm -f *.exe

install:

